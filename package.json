{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "steam",
  "title": "Steam",
  "description": "Search and view information about any game on steam, as well as games you own.",
  "icon": "command-icon.png",
  "author": "KevinBatdorf",
  "categories": [
    "Fun",
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "steam",
      "title": "Search Games",
      "subtitle": "Steam",
      "description": "Searches the Steam api for game information and also lets you search your own Steam account.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "token",
      "type": "textfield",
      "title": "Steam API Key",
      "description": "Add your API key",
      "placeholder": "API Key",
      "required": false
    },
    {
      "name": "steamid",
      "type": "textfield",
      "title": "Steam ID",
      "description": "Add your Steam ID",
      "placeholder": "Steam ID",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.35.1",
    "date-fns": "^2.28.0",
    "node-fetch": "^3.2.4",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.0.1",
    "@types/node": "~17.0.35",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "prettier": "^2.6.2",
    "react-devtools": "^4.24.6",
    "typescript": "^4.7.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
